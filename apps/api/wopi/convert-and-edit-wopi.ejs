    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    background-color: #f4f4f4;
    z-index: 10;
}

.message-block {
    display: inline-block;
    vertical-align: middle;
    width: 100%;
}

.message-inner {
    width: 550px;
    margin: auto;
    padding: 30px;
    background-color: #e3e3e3;
    text-align: center;
}

.title {
    font-size: 24px;
    margin: 0 0 14px;
}

